spring:
 application:
  name=gateway-service
 cloud:
   gateway:
     routes:
      - id: books
        uri: lb://book-service
        predicates:
         - Path =/v1/book/**
      - id: kitaplik
        uri: lb://library-service
        predicates:
          - Path=/v1/library
     
     discovery:
        locator:
          enabled: true
 
server:
  port=8888
eureka:
 client:
  register-with-eureka: true
  service-url:
   defaultZone: ${EUREKA_URI:http://localhost:8761/eureka}
 instance:
  prefer-ip-address=true

